<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parentLayout"
    android:background="@mipmap/login_bg2"
    >
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/edit_bg_color">
        <TextView
            android:text="@string/login_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_marginLeft="55dp"
      android:layout_marginRight="55dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
   <RelativeLayout
       android:id="@+id/r1"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/button_border_light_black"
       >
       <ImageView
           android:id="@+id/img1"
           android:layout_marginLeft="8dp"
           android:background="@drawable/ic_username"
           android:layout_marginTop="10dp"
           android:layout_width="27dp"
           android:layout_height="27dp" />
       <com.rengwuxian.materialedittext.MaterialEditText
           android:id="@+id/username"
           android:layout_toRightOf="@id/img1"
           android:layout_marginLeft="2dp"
           android:layout_marginRight="20dp"
           android:hint="@string/username"
           android:textSize="15sp"
           app:met_textColorHint="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="5dp"
           android:paddingLeft="10dp"
           app:met_textColor="@color/white"

           />
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r2"
        android:background="@drawable/button_border_light_black"
        android:layout_below="@+id/r1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/img2"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_pwd"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/pass"
            android:hint="@string/password"
            android:textSize="15sp"
            app:met_textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/img2"
            android:layout_marginLeft="2dp"
            app:met_textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            />
    </RelativeLayout>
      <RelativeLayout
          android:id="@+id/r4"
          android:background="@drawable/button_border_light_black_jia"
          android:layout_below="@+id/r2"
          android:layout_marginTop="15dp"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          >
          <ImageView
              android:id="@+id/img3"
              android:layout_marginLeft="8dp"
              android:background="@drawable/ic_boss_code"
              android:layout_marginTop="10dp"
              android:layout_width="27dp"
              android:layout_height="27dp" />
          <com.rengwuxian.materialedittext.MaterialEditText
              android:id="@+id/boss_cord"
              android:hint="@string/bosscord"
              app:met_textColor="@color/yellow"
              android:layout_toRightOf="@id/img3"
              android:layout_marginLeft="2dp"
              android:textSize="14sp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="7dp"
              app:met_underlineColor="@color/transparent"
              app:met_textColorHint="@color/yellow"
              android:layout_width="280dp"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/login_ll"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_below="@+id/r4"
          android:layout_marginTop="25dp"
          android:background="@drawable/button_border2">

          <TextView
              android:layout_width="210dp"
              android:layout_height="match_parent"
              android:gravity="center"
              android:paddingLeft="40dp"
              android:text="登      陆"
              android:textColor="@color/white"
              android:textSize="25sp" />

          <ImageView
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:layout_marginTop="3dp"
              android:background="@drawable/ic_login" />
      </RelativeLayout>
  </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register"
            android:text="@string/register"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@color/light_gray"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:autoLink="all"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/forget"
            android:text="@string/forget"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:background="@color/light_gray"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>

</LinearLayout>