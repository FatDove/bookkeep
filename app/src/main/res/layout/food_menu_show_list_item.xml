<?xml version="1.0" encoding="utf-8"?>
<com.jia.libui.sildeItemLayout.SlidingItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_border_white"
    android:layout_margin="5dp"
    android:id="@+id/SlidingItemLayout"
    app:my_layout_type="Right">

    <com.jia.libui.sildeItemLayout.SlidingContentView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
    <ImageView
     android:layout_margin="5dp"
     android:id="@+id/menu_show_item_img"
     android:background="@mipmap/icon_stub"
     android:layout_width="45dp"
     android:layout_height="45dp" />

  <TextView
      android:id="@+id/food_name"
      android:text="XXX"
      android:textSize="20sp"
      android:textColor="@color/black"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/menu_show_item_img"
      android:layout_width="130dp"
      android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/food_price"
        android:text="XXX"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/food_description"
        android:text="XXX"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/menu_show_item_img"
        android:layout_below="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="8dp"
        android:layout_marginRight="15dp"
        android:id="@+id/menu_show_item_edit"
        android:src="@drawable/menu_editor_select"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    </RelativeLayout>
    </com.jia.libui.sildeItemLayout.SlidingContentView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="12dp"
            android:id="@+id/delete_view"
            android:src="@drawable/menu_delete_select"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</com.jia.libui.sildeItemLayout.SlidingItemLayout>