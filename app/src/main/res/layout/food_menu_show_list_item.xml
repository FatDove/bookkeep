<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_border_white"
    android:layout_margin="5dp"
    >


 <ImageView
     android:layout_margin="5dp"
     android:id="@+id/menu_show_item_img"
     android:src="@mipmap/icon_stub"
     android:layout_width="60dp"
     android:layout_height="60dp" />

  <TextView
      android:id="@+id/food_name"
      android:text="XXX"
      android:textSize="25sp"
      android:textColor="@color/black"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/menu_show_item_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/food_price"
        android:text="XXX"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/food_description"
        android:text="XXX"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/menu_show_item_img"
        android:layout_below="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="12dp"
        android:layout_marginRight="15dp"
        android:id="@+id/menu_show_item_edit"
        android:src="@drawable/menu_editor_select"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</RelativeLayout>