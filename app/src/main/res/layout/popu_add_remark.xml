<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_margin="3dp"
        android:background="@drawable/button_white_border_black_15dp"
        android:layout_width="340dp"
        android:layout_height="290dp">
       <EditText
           android:text="备注："
           android:paddingLeft="8dp"
           android:textSize="22sp"
           android:layout_margin="8dp"
           android:textColor="@color/dark_blue"
           android:textStyle="bold"
           android:background="@drawable/button_white_border_black_15dp"
           android:id="@+id/remark_content"
           android:layout_width="240dp"
           android:layout_height="55dp"/>
<Button
    android:text="添 加"
    android:textSize="22sp"
    android:background="@drawable/button_white_border_black_15dp"
    android:layout_toRightOf="@+id/remark_content"
    android:id="@+id/submit_remark"
    android:layout_width="90dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:layout_height="55dp" />
  <android.support.v7.widget.RecyclerView
      android:layout_margin="8dp"
      android:padding="10dp"
      android:id="@+id/add_remark_rv"
      android:background="@drawable/button_white_border_black_15dp"
      android:layout_below="@+id/remark_content"
      android:layout_width="match_parent"
      android:layout_height="218dp">

  </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>